<!-- views/account/update.ejs -->


<h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="forms-container">
    <!-- Form 1: Account Update -->
    <form id="accountUpdateForm" action="/account/update" method="post" class="form-grid">
        <h2>Account Update</h2>
        <p>Use this form to update your first name, last name, and email address.</p>

        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required
               value="<%= locals.accountData ? locals.accountData.account_firstname : '' %>"
               placeholder="Enter first name">

        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required
               value="<%= locals.accountData ? locals.accountData.account_lastname : '' %>"
               placeholder="Enter last name">

        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required
               value="<%= locals.accountData ? locals.accountData.account_email : '' %>"
               placeholder="Enter a valid email">

        <!-- Hidden field for account_id -->
        <input type="hidden" name="account_id" value="<%= locals.accountData ? locals.accountData.account_id : '' %>">

        <button type="submit">Update Account</button>
    </form>

    <!-- Form 2: Change Password -->
    <form id="changePasswordForm" action="/account/change-password" method="post" class="form-grid">
        <h2>Change Password</h2>
        <p>Entering a new password will change your current password. Passwords must be at least 12 characters and contain at least 1 uppercase, 1 lowercase, 1 number and 1 special character.</p>

        <label for="account_password">New Password:</label>
        <input type="password" id="account_password" name="account_password" required
               pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9\s])(?!.*\s).{12,}$"
               title="Passwords must be at least 12 characters and contain at least 1 uppercase, 1 lowercase, 1 number and 1 special character.">

        <!-- Hidden field for account_id -->
        <input type="hidden" name="account_id" value="<%= locals.accountData ? locals.accountData.account_id : '' %>">

        <button type="submit">Change Password</button>
    </form>
</div>

<style>
    /* Basic styling for the forms */
    .forms-container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        max-width: 600px;
        margin: 2rem auto;
        padding: 1rem;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        padding: 1.5rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
    }

    .form-grid h2 {
        grid-column: 1 / -1;
        text-align: center;
        margin-bottom: 1rem;
        color: #333;
    }

    .form-grid p {
        grid-column: 1 / -1;
        margin-bottom: 1rem;
        color: #555;
        font-size: 0.9em;
    }

    .form-grid label {
        font-weight: bold;
        color: black;
    }

    .form-grid input[type="text"],
    .form-grid input[type="email"],
    .form-grid input[type="password"] {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box; 
        font-size: 1em;
    }

    .form-grid input[type="text"]:focus,
    .form-grid input[type="email"]:focus,
    .form-grid input[type="password"]:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .form-grid button[type="submit"] {
        grid-column: 1 / -1;
        padding: 0.8rem 1.5rem;
        background-color: #007bff;
        color: black;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1em;
        transition: background-color 0.3s ease;
    }

    .form-grid button[type="submit"]:hover {
        background-color: #0056b3;
    }

    .notice {
        list-style-type: none;
        padding: 10px;
        margin: 1rem auto;
        max-width: 600px;
        background-color: #ffe0b2; 
        border: 1px solid #ff9800;
        border-radius: 5px;
        color: #e65100; 
    }

    .notice li {
        margin-bottom: 5px;
    }
</style>