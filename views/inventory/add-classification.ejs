<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %> | CSE Motors</title>
</head>
<body>
  <h1><%= title %></h1>

  <!-- Flash Message -->
  <%- messages() %>

  <!-- Add Classification Form -->
  <form action="/inv/add-classification" method="post" onsubmit="console.log('Form submitted')" required>
    <label for="classificationName">Classification Name:</label>
    <input 
      type="text" 
      name="classification_name" 
      id="classificationName" 
      required 
      pattern="^[a-zA-Z0-9]+$"
      title="No spaces or special characters"
    >
    <button type="submit">Add Classification</button>
  </form>

  <!-- Server-side Errors -->
  <% if (Array.isArray(errors) && errors.length > 0) { %>
  <ul>
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

</body>
</html>
